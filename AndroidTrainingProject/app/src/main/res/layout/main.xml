<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/accelerometer"
            android:layout_width="match_parent"
            android:text="accelerometer"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/battery"
            android:layout_width="match_parent"
            android:text="battery"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/phone_properties"
            android:layout_width="match_parent"
            android:text="phone_properties"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:text="notification"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/sqlite"
            android:layout_width="match_parent"
            android:text="sqlite"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/searchable"
            android:layout_width="match_parent"
            android:text="searchable"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:text="webview"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:text="video_view"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/take_photo_and_email"
            android:layout_width="match_parent"
            android:text="take_photo_and_email"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/face_detection"
            android:layout_width="match_parent"
            android:text="face_detection"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:text="fragment"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/simple_intent"
            android:layout_width="match_parent"
            android:text="simple_intent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/test_layout"
            android:layout_width="match_parent"
            android:text="test_layout"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/service"
            android:layout_width="match_parent"
            android:text="service"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>